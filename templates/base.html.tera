<!DOCTYPE html>

<html>

<head>

  <!-- Meta tags BEGIN -->
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" name="viewport" />
  <meta name="viewport" content="width=device-width" />
  <!-- Meta tags END -->

  <!-- Favicon BEGIN -->
  <link rel="icon" href="img/logo.png">
  <!-- Favicon END -->

  <!-- Page title BEGIN -->
  <title>Nature Gatherings - {{ title }}</title>
  <!-- Page title END -->

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" />

  <!-- Halfmoon CSS -->
  <link href="https://cdn.jsdelivr.net/gh/halfmoonui/halfmoon@1.0.3/css/halfmoon.min.css" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet" />
</head>
<style>
body {
	font-family: 'Roboto';
}
</style>

<body>
  <!-- Sign in modal BEGIN -->
  <div class="modal" id="signin-modal" tabindex="-1" role="dialog">

    <!-- Modal dialog BEGIN -->
    <div class="modal-dialog" role="document">

      <!-- Modal content BEGIN -->
      <div class="modal-content">

        <!-- Close button BEGIN -->
        <a href="#" class="btn close" role="button" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </a>
        <!-- Close button END -->

        <!-- Modal title BEGIN -->
        <h5 class="modal-title"> Sign in to your account </h5>
        <!-- Modal title END -->

        <!-- Sign in form BEGIN -->
        <form action="signin" method="POST">

          <!-- Username field BEGIN -->
          <div class="form-group">
            <label for="username" class="required"> Username </label>
            <input type="text" id="username" class="form-control" placeholder="Username" required="required">
          </div>
          <!-- Username field END -->

          <!-- Password field BEGIN-->
          <div class="form-group">
            <label for="password" class="required"> Password </label>
            <input type="password" id="password" class="form-control" placeholder="Password" required="required">
          </div>
          <!-- Password field END -->

          <!-- Sign in button BUTTON -->
          <input class="btn btn-primary btn-block" type="submit" value="Sign in">
          <!-- Sign in button END -->

        </form>
        <!-- Sign in form END -->

        <!-- Forgot password link BEGIN -->
        <div class="text-right mt-10">
          <a href="#signin-modal">Forgot Password?</a>
        </div>
        <!-- Forgot password link END -->

      </div>
      <!-- Modal content END -->

    </div>
    <!-- Modal dialog END -->

  </div>
  <!-- Sign in modal END -->

  <!-- Page wrapper BEGIN -->
  <div class="page-wrapper with-navbar with-navbar-fixed-bottom">

    <!-- Navbar BEGIN -->
    <nav class="navbar">

      <!-- Logo BEGIN -->
      <a href="#" class="navbar-brand">
        <img src="img/logo.png" alt="logo">
        Nature Gatherings
      </a>
      <!-- Logo END -->

      <!-- Navbar nav BEGIN -->
      <ul class="navbar-nav d-none d-md-flex">

        <!-- Navbar nav item autogenerated BEGIN -->
        {% for nav in navs %}
        {%if nav.name == title %}

        <!-- Active links BEGIN -->
        <li class="nav-item active">
          <a href="{{ nav.link }}" class="nav-link">
            {{ nav.name }}
          </a>
        </li>
        <!-- Active links END -->

        {% else %}

        <!-- Inactive links BEGIN -->
        <li class="nav-item">
          <a href="{{ nav.link }}" class="nav-link">
            {{ nav.name }}
          </a>
        </li>
        <!-- Inactive link END -->

        {% endif %}
        {% endfor %}
        <!-- Navbar nav item autogenerated END -->

      </ul>
      <!-- Navbar nav END -->

      <!-- Navbar search box BEGIN -->
      <form class="form-inline d-none d-md-flex ml-auto" action="search" method="POST">

        <!-- Input group BEGIN -->
        <div class="input-group">

          <!-- Search text box BEGIN -->
          <input type="text" class="form-control" placeholder="Search for events" required="required">
          <!-- Search text box END -->

          <!-- Input append containing button BEGIN -->
          <div class="input-group-append">
            <button class="btn" type="submit">
              <i class="fa fa-search" aria-hidden="true"></i>

              <!-- Screen reader text BEGIN -->
              <span class="sr-only">Search for events</span>
              <!-- Screen reader text END -->

            </button>
          </div>
          <!-- Input append containing button END -->

        </div>
        <!-- Input group END -->

      </form>
      <!-- Navbar search box END -->

      <!-- Dark theme form BEGIN -->
      <form action="toggledarktheme" method="POST">

        <!-- Dark theme button BEGIN -->
        <button class="btn btn-action ml-10" type="submit"
          aria-label="Toggle Dark Mode" data-toggle="tooltip" data-title="Toggle Dark Mode" data-placement="bottom">
          <i class="fa fa-moon" aria-hidden="true"></i>
        </button>
        <!-- Dark theme button END -->

      </form>
      <!-- Dark theme form END -->

      <!-- Login button BEGIN -->
      <a href="#signin-modal" class="btn btn-primary ml-10" data-toggle="tooltip" data-title="Login/Signup"
        data-placement="bottom">
        <i class="fa fa-user" aria-hidden="true"></i>
        Login
      </a>
      <!-- Login button END -->

    </nav>
    <!-- Navbar END -->

    <!-- Content wrapper BEGIN -->
    <div class="content-wrapper bg-primary">
      <div class="content">
        <h3 class="text-white">{{description}}</h1>
        {% block content %}
        {% endblock content %}
      </div>
    </div>
    <!-- Content wrapper END -->

    <!-- Navbar bottom BEGIN -->
    <nav class="navbar navbar-fixed-bottom">

      <!-- Navbar bottom nav BEGIN -->
      <ul class="navbar-nav ml-auto">

        <!-- Code link BEGIN -->
        <li class="nav-item">
          <a class="nav-link" href="https://gitlab.com/AravindIM/naturegatherings/">
            <i class="fa fa-code mr-5" aria-hidden="true"></i>
            Contribute to our code
          </a>
        </li>
        <!-- Code link END -->

        <!-- License link BEGIN -->
        <li class="nav-item">
          <a class="nav-link" href="https://www.gnu.org/licenses/gpl-3.0.en.html">
            <i class="fa fa-copyright fa-6 fa-flip-horizontal mr-5" aria-hidden="true"></i>
            Licensed under GNU GPL-3.0
          </a>
        </li>
        <!-- License link END -->

      </ul>
      <!-- Navbar bottom nav END -->

    </nav>
    <!-- Navbar bottom END -->

  </div>
  <!-- Page wrapper END -->

  <!-- Halfmoon JS -->
  <script src="https://cdn.jsdelivr.net/gh/halfmoonui/halfmoon@1.0.3/js/halfmoon.min.js"></script>

  <!-- Darkmode toggler script BEGIN -->
  <script type="text/javascript">
    {% if darkmode %}
    halfmoon.toggleDarkMode();
    {% endif %}
  </script>
  <!-- Darkmode toggler script END -->

</body>

</html>
